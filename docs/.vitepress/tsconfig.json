{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "types": ["vite/client", "vitepress/client"],
    "paths": {
      "@theme/*": ["./theme/*"],
      "@/*": ["../*"]
    },
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./**/*.vue",
    "./**/*.md",
    "./theme/env.d.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/.vitepress/cache/**",
    "**/.vitepress/dist/**"
  ]
}
